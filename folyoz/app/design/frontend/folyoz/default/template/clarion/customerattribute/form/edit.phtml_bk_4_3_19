	function minCheck(){
		jQuery("#minpho").hide();
		jQuery("#minill").hide();
		if(minillcount && minphocount == 0 ){
			jQuery("#minpho").hide();
			jQuery("#minill").hide();
			return true;
		}else if(minillcount == 0){
			jQuery("#minill").hide();
		}else if(minphocount == 0){
			jQuery("#minpho").hide();
		}
		
		if(minillcount != 0 && minillcount < 18){
			jQuery('#work_type_use_for_illustration').focus();
			jQuery("#minill").show();
			return false;
		}else if(minphocount != 0 && minphocount < 18){
			jQuery('#work_type_use_for_photography').focus();
			jQuery("#minpho").show();			
			return false;
		}else{
			jQuery("#minpho").hide();
			jQuery("#minill").hide();			
			return true;
		}
	}
