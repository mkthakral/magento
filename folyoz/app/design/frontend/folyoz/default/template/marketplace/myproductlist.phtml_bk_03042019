	<script>
	window.onload = function(){
		
		if( !jQuery.trim( jQuery('.account-message').html() ).length) {
			jQuery('.account-message').hide();
		}
		jQuery('.tooltip-outer').prev('h1').css('display','inline-block'); // tooltip in same line
		
